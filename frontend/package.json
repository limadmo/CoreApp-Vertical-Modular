{
  "name": "coreapp-frontend",
  "version": "1.0.0",
  "description": "CoreApp SAAS Frontend - React + TypeScript + Mantine + Tailwind 4",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@mantine/core": "^7.15.0",
    "@mantine/hooks": "^7.15.0",
    "@mantine/form": "^7.15.0",
    "@mantine/notifications": "^7.15.0",
    "@mantine/dates": "^7.15.0",
    "@mantine/charts": "^7.15.0",
    "@mantine/spotlight": "^7.15.0",
    "@tabler/icons-react": "^3.19.0",
    "react-router-dom": "^6.26.2",
    "axios": "^1.7.7",
    "react-query": "^3.39.3",
    "dayjs": "^1.11.13",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.12.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc-fb9a90fa48-20240614",
    "eslint-plugin-react-refresh": "^0.4.12",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tailwindcss": "^4.0.0-beta.5",
    "@tailwindcss/typography": "^0.5.15",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}